                                Grid.Column="1"
                                HorizontalOptions="StartAndExpand"
                                Text="Patricio Alarcon"
                                FontSize="14"
                                TextColor="{StaticResource BaseGrey}"
                                FontFamily="{StaticResource BookFontGotham}"/>
                    </Grid>
                </StackLayout>
                <!--Rut Cliente-->      <StackLayout
                    Orientation="Horizontal"
                    Margin="0,5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label
                                Grid.Column="0"
                                HorizontalOptions="StartAndExpand"
                                Text="Rut Cliente"
                                FontSize="14"
                                TextColor="{StaticResource BaseGrey}"
                                FontFamily="{StaticResource MediumFontGotham}"/>
                        <Label
                                Grid.Column="1"
                                HorizontalOptions="StartAndExpand"
                                Text="12.968.185-5"
                                FontSize="14"
                                TextColor="{StaticResource BaseGrey}"
                                FontFamily="{StaticResource BookFontGotham}"/>
                    </Grid>
                </StackLayout>
                       

            </StackLayout>
            
            <!--Botones-->

            <StackLayout Orientation="Horizontal">
                <Button/>
                <Button/>
            </StackLayout>
            
        </StackLayout>
