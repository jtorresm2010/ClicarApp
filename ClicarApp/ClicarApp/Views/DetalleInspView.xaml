                                Text="Modelo"
                                FontSize="14"
                                TextColor="{StaticResource BaseGrey}"
                                FontFamily="{StaticResource MediumFontGotham}"/>
                        <Label
                                Grid.Column="1"
                                HorizontalOptions="StartAndExpand"
                                Text="208"
                                FontSize="14"
                                TextColor="{StaticResource BaseGrey}"
                                FontFamily="{StaticResource BookFontGotham}"/>
                    </Grid>
                </StackLayout>
                <!--Color-->            <StackLayout
                    Orientation="Horizontal"
                    Margin="0,5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label
                                Grid.Column="0"
                                HorizontalOptions="StartAndExpand"
                                Text="Color"
                                FontSize="14"
                                TextColor="{StaticResource BaseGrey}"
                                FontFamily="{StaticResource MediumFontGotham}"/>
                        <Label
                                Grid.Column="1"
                                HorizontalOptions="StartAndExpand"
                                Text="Blanco"
                                FontSize="14"
                                TextColor="{StaticResource BaseGrey}"
                                FontFamily="{StaticResource BookFontGotham}"/>
                    </Grid>
                </StackLayout>
                <!--Año-->              <StackLayout
                    Orientation="Horizontal"
                    Margin="0,5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label
                                Grid.Column="0"
                                HorizontalOptions="StartAndExpand"
                                Text="Año"
                                FontSize="14"
                                TextColor="{StaticResource BaseGrey}"
                                FontFamily="{StaticResource MediumFontGotham}"/>
