                                Grid.Column="1"
                                HorizontalOptions="StartAndExpand"
                                Text="PEUGEOT"
                                FontSize="14"
                                TextColor="{StaticResource BaseGrey}"
                                FontFamily="{StaticResource BookFontGotham}"/>
                    </Grid>
                </StackLayout>
                <!--Modelo-->           <StackLayout
                    Orientation="Horizontal"
                    Margin="0,5">
                    <Grid>
                        <Grid.ColumnDefinitions>
