                        </Grid.ColumnDefinitions>
                        <Label
                                Grid.Column="0"
                                HorizontalOptions="StartAndExpand"
                                Text="Marca"
                                FontSize="14"
                                TextColor="{StaticResource BaseGrey}"
                                FontFamily="{StaticResource MediumFontGotham}"/>
