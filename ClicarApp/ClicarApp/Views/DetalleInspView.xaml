                                TextColor="{StaticResource BaseGrey}"
                                FontFamily="{StaticResource BookFontGotham}"/>
                    </Grid>
                </StackLayout>
                <!--Kilometraje-->      <StackLayout
                    Orientation="Horizontal"
                    Margin="0,5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label
                                Grid.Column="0"
                                HorizontalOptions="StartAndExpand"
                                Text="Kilometraje"
                                FontSize="14"
                                TextColor="{StaticResource BaseGrey}"
                                FontFamily="{StaticResource MediumFontGotham}"/>
                        <Label
                                Grid.Column="1"
                                HorizontalOptions="StartAndExpand"
                                Text="Kilometraje"
                                FontSize="14"
                                TextColor="{StaticResource BaseGrey}"
                                FontFamily="{StaticResource BookFontGotham}"/>
                    </Grid>
                </StackLayout>
                <!--Tipo-->             <StackLayout
                    Orientation="Horizontal"
                    Margin="0,5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label
                                Grid.Column="0"
                                HorizontalOptions="StartAndExpand"
                                Text="Tipo"
                                FontSize="14"
                                TextColor="{StaticResource BaseGrey}"
                                FontFamily="{StaticResource MediumFontGotham}"/>
                        <Label
                                Grid.Column="1"
                                HorizontalOptions="StartAndExpand"
                                Text="CITI_CAR"
                                FontSize="14"
                                TextColor="{StaticResource BaseGrey}"
                                FontFamily="{StaticResource BookFontGotham}"/>
                    </Grid>
                </StackLayout>
                <!--Nombre Cliente-->   <StackLayout
                    Orientation="Horizontal"
                    Margin="0,5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label
                                Grid.Column="0"
                                HorizontalOptions="StartAndExpand"
                                Text="Nombre Cliente"
                                FontSize="14"
                                TextColor="{StaticResource BaseGrey}"
                                FontFamily="{StaticResource MediumFontGotham}"/>
